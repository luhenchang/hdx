<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@drawable/details_icon_line2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="7.5dp" >

        <TextView
            android:id="@+id/tvMainBottomHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dip"
            android:drawableTop="@drawable/fragment_bottom_home_selected"
            android:gravity="center"
            android:text="推荐"
            android:textColor="@color/home_bottom_color_normal"
            android:textSize="@dimen/little_12" />

        <TextView
            android:id="@+id/tvMainBottomSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dip"
            android:drawableTop="@drawable/fragment_bottom_select_normal"
            android:gravity="center"
            android:text="发现"
            android:textColor="@color/home_bottom_color_normal"
            android:textSize="@dimen/little_12" />

        <LinearLayout
            android:id="@+id/linClickTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvMainBottomMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dip"
                    android:drawableTop="@drawable/selector_bottom_third"
                    android:gravity="center"
                    android:text="消息"
                    android:textColor="@color/home_bottom_color_normal"
                    android:textSize="@dimen/little_12" />

                <ImageView
                    android:id="@+id/ivMainUnReadNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/main_bottom_mine_unread_bg" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvMainBottomSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="4dip"
            android:drawableTop="@drawable/fragment_bottom_circle_normal"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/home_bottom_color_normal"
            android:textSize="@dimen/little_12" />
    </LinearLayout>

</LinearLayout>