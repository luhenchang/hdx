<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.accuvally.hdtui.ui.SyncHorizontalScrollView
        android:id="@+id/sv_navigation_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/rl_nav_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" >

            <RelativeLayout
                android:id="@+id/rl_nav_image_in"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/white" >

                <RadioGroup
                    android:id="@+id/rg_nav_content_image"
                    android:layout_width="fill_parent"
                    android:layout_height="76dp"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal" >
                </RadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rl_nav_image_in"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_image5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_image6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_image7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_image8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_image9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_image10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_image11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_nav_indicator_image"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rl_nav_image_in"
                android:background="@drawable/select_navigation_titile"
                android:scaleType="matrix" />
        </RelativeLayout>
    </com.accuvally.hdtui.ui.SyncHorizontalScrollView>

    <ImageView
        android:id="@+id/iv_nav_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="1dip"
        android:visibility="gone" >
    </ImageView>

    <ImageView
        android:id="@+id/iv_nav_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="1dip"
        android:visibility="gone" >
    </ImageView>

</RelativeLayout>