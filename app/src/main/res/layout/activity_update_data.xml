<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/activity_header_new" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/feedback_content_icon_bg" />

            <com.accuvally.hdtui.ui.EditTextWithDel
                android:id="@+id/edUpdateContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:maxLength="12"
                android:gravity="center_vertical"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:textSize="@dimen/little_16" />

            <TextView
                android:id="@+id/tvMaxLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/feedback_max_length2"
                android:textColor="@color/gary_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/details_icon_line2" />

        <TextView
            android:id="@+id/tvPrompts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/personal_update_prompt1"
            android:textColor="@color/gary_content"
            android:textSize="@dimen/little_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_wane_green" >

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_onclick_btn"
                android:padding="10dp"
                android:text="@string/personal_update_prompt3"
                android:textColor="@color/white"
                android:textSize="@dimen/little_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>