<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.accuvally.hdtui.ui.SyncHorizontalScrollView
        android:id="@+id/sv_navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/rl_nav"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_gravity="top" >

            <RelativeLayout
                android:id="@+id/rl_nav_in"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" >

                <RadioGroup
                    android:id="@+id/rg_nav_content"
                    android:layout_width="fill_parent"
                    android:layout_height="38dip"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal" >
                </RadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rl_nav_in"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />

                <ImageView
                    android:id="@+id/iv_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_navigation_title"
                    android:scaleType="matrix" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_nav_indicator"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rl_nav_in"
                android:background="@drawable/select_navigation_titile"
                android:scaleType="matrix" />
        </RelativeLayout>
    </com.accuvally.hdtui.ui.SyncHorizontalScrollView>

    <ImageView
        android:id="@+id/iv_nav_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="1dip"
        android:visibility="gone" >
    </ImageView>

    <ImageView
        android:id="@+id/iv_nav_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="1dip"
        android:visibility="gone" >
    </ImageView>

</RelativeLayout>