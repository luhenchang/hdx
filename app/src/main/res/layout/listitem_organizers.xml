<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_home_dialog_btn"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/ivOrgLogoUrl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/tvOrgName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/little_16" />

        <TextView
            android:id="@+id/tvOrgNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/my_accuvally_item_icon_include"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="@color/gary_title"
            android:textSize="@dimen/little_14" />

        <TextView
            android:id="@+id/tvOrgFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/my_accuvally_icon_like_bg"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="@color/gary_title"
            android:textSize="@dimen/little_14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivIsFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:background="@drawable/organizers_add_icon_bg" />

    <ProgressBar
        android:id="@+id/org_progressbar"
        style="@style/progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:visibility="gone" />

</LinearLayout>