<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ecedec"
              android:orientation="vertical" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#ecedec"

                  android:orientation="vertical" >

        <include layout="@layout/activity_header_new" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ecedec" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/evaluate_ivItemRecommendImg"
                android:layout_width="162dp"
                android:layout_height="96dp"
                android:background="@drawable/default_home_image"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/evaluate_tvItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="relaxed 周末................"
                    android:textColor="@color/txt_gray"
                    android:textSize="15sp" />



                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="8dp"
                              android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="活动地点:"
                        android:textColor="#737373"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/evaluate_tvItemAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="地址"
                        android:textColor="#737373"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="4dp"
                              android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="活动时间:"
                        android:textColor="#737373"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/evaluate_tvItemTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="时间"
                        android:textColor="#737373"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ecedec" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center|top"
            android:orientation="horizontal"
            android:background="#fff"

            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/feedback_content_icon_bg" />

            <EditText
                android:id="@+id/evaluate_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:gravity="top"
                android:hint="输入活动内容的评价，300字以内"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="@dimen/little_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"

            android:background="#ecedec" />


        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:background="#fff"
                      android:layout_height="100dp">

            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_marginTop="30dp"
                          android:layout_height="match_parent">
                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="50dp"
                             android:id="@+id/evaluate_like"
                             android:background="@drawable/like_nor_3x"/>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="13"
                              android:layout_marginLeft="15dp"
                              android:textSize="15sp"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="2dp"
                              android:text="活动很赞"
                              android:textSize="15sp"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#e6e6e6" />


            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_marginTop="30dp"
                          android:layout_height="match_parent">
                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="50dp"
                             android:id="@+id/evaluate_dislike"
                             android:background="@drawable/dislike_nor_3x"/>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="3"
                              android:layout_marginLeft="15dp"
                              android:textSize="15sp"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="2dp"
                              android:text="有待改进"
                              android:textSize="15sp"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ecedec" />

    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#fff"
                    android:layout_height="120px">
        <CheckBox android:layout_width="60px"
                  android:button="@null"
                android:background="@drawable/share_nor_3x"
                android:id="@+id/evaluate_share"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_height="60px"/>

        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/black"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:layout_toRightOf="@id/evaluate_share"
                  android:text="分享到朋友圈"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>


        <LinearLayout android:layout_width="280px"
                      android:background="#61b754"
                      android:layout_alignParentRight="true"
                      android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:id="@+id/evaluate_submit"
                      android:layout_gravity="center"
                      android:layout_marginLeft="30dp"
                      android:text="提交评价"
                      android:textSize="15sp"/>

        </LinearLayout>

</RelativeLayout>

</RelativeLayout>