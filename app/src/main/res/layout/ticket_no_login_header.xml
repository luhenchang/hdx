<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/rlPersonTicke"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/not_ticket_top_bg" >

        <com.accuvally.hdtui.ui.CircleImageView
            android:id="@+id/ivSettingHead"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/not_lgin_head_bg"
            app:border_color="@color/transparent_white"
            app:border_width="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivSettingHead"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawablePadding="10dp"
                android:text="@string/setting_no_login"
                android:textColor="@color/white"
                android:textSize="@dimen/little_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="@string/setting_no_signature"
                android:textColor="@color/white"
                android:textSize="@dimen/little_14"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="亲，还木有参加过活动，马上挑一个活动参加吧！"
        android:textColor="@color/gary_title"
        android:textSize="@dimen/little_14"
        android:visibility="gone" />

</LinearLayout>