<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvCityTitle"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="定位城市"
                android:textColor="@color/topic_date"
                android:textSize="@dimen/little_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/locationCityName"
                        android:layout_width="81dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/grid_view_city_bg"
                        android:gravity="center"
                        android:text="北京"
                        android:textColor="#484848"
                        android:textSize="@dimen/little_16" />

                    <ImageView
                        android:id="@+id/iv_prompt_select_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:background="@drawable/grid_view_select_city" >
                    </ImageView>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="全部城市"
            android:textColor="@color/topic_date"
            android:textSize="@dimen/little_16" />

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/transparent"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:verticalSpacing="15dp" />
    </LinearLayout>
