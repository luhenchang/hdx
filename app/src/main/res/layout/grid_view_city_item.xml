<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/hot_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/grid_view_city_bg"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:text="北京"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/little_16" />

    <ImageView
        android:id="@+id/iv_prompt_select_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-13dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/hot_city_name"
        android:background="@drawable/grid_view_select_city"
        android:visibility="visible" >
    </ImageView>

</RelativeLayout>