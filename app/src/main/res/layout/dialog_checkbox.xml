<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/update_background"
    android:orientation="vertical" >
        <com.accuvally.hdtui.ui.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/ll_add_checkbox_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical" >
        </LinearLayout>
    </com.accuvally.hdtui.ui.CustomerScrollView>

   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_wane_green" >

            <Button
                android:id="@+id/bt_checkbox_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_onclick_btn"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/register_confirm_button"
                android:textColor="@color/white"
                android:textSize="@dimen/little_16" />
        </LinearLayout>

</LinearLayout>
