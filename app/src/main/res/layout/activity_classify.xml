<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_backgroud"
    android:orientation="vertical" >

    <include layout="@layout/activity_header_new" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/classfly_title2"
        android:textColor="@color/gary_title"
        android:textSize="@dimen/little_14" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.accuvally.hdtui.ui.ScrolListView
                android:id="@id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:dividerHeight="0.1dp"
                android:listSelector="@color/transparent" />

            <View
                android:id="@+id/viewline"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/all_bg" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gary_title" />

    <LinearLayout
        android:id="@+id/lyClassflyFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_home_dialog_btn"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/classfly_title3"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/little_16" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/gary_title" />

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_home_dialog_btn"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/classfly_title4"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/little_16" />
    </LinearLayout>

</LinearLayout>