<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyDetailsBottom"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/txt_green"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/details_bottom_collection"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvDetailsColl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_click_btn"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/white"
            android:textSize="@dimen/little_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDetailsRegTicket"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_click_btn"
        android:gravity="center"
        android:text="报名"
        android:textColor="@color/white"
        android:textSize="@dimen/little_16" />

</LinearLayout>