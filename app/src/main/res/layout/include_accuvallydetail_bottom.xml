<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44.5dp"
    android:background="@color/white" >


    <!--=======================普通购票===========================-->

    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/ll_regTicket"
                  android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llCollect"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_click_btn"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivDetailsColl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shoucang" />

            <TextView
                android:id="@+id/tvDetailsColl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="收藏"
                android:textColor="#bdbdbd"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#ecedec" />

        <LinearLayout
            android:id="@+id/llGroupChat"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_click_btn"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/tvGroupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/acc_detail_group"
                android:gravity="center"
                android:text="群聊"
                android:textColor="#bdbdbd"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llEvaluate"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_click_btn"
            android:clickable="true"
            android:visibility="gone"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/acc_detail_group"
                android:gravity="center"
                android:text="评价"
                android:textColor="#bdbdbd"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEnroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#80d074"
            android:gravity="center"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tvDetailsRegTicket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_click_btn"
                android:clickable="true"
                android:gravity="center"
                android:text="立即报名"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <!--=======================抢票===========================-->


</FrameLayout>