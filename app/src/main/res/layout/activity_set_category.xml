<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:text="请选择你的兴趣爱好"
        android:textSize="@dimen/text_size_large"
        android:gravity="center"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:textColor="@color/txt_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="根据你的兴趣为你推荐专属活动"
        android:textSize="@dimen/text_size_middle"
        android:gravity="center"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:textColor="@color/txt_gray2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


        <GridView android:layout_width="match_parent"
                  android:layout_marginTop="10dp"
                  android:numColumns="3"
                  android:layout_weight="1"
                  android:id="@+id/category_gridview"
                  android:gravity="center"
                  android:verticalSpacing="15dp"
                  android:layout_marginBottom="10dp"
                  android:layout_height="0dp">

        </GridView>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom"
                  android:layout_height="wrap_content">
        <TextView
            android:text="选好了进入首页"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/category_background_entry_nor"
            android:textColor="@color/white"
            android:id="@+id/category_select_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:text="跳过，先随便看看 >>"
        android:textSize="@dimen/text_size_middle"
        android:gravity="center"
        android:id="@+id/category_skip"
        android:layout_marginBottom="15dp"
        android:layout_gravity="bottom"
        android:textColor="@color/txt_gray2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
